<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.ian.applayout.RoleActivity">

    <Button
        android:text="@string/theFloorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theFloorButton"
        android:layout_weight="0.33"/>

    <Button
        android:text="@string/theBarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theBarButton"
        android:layout_weight="0.33"/>

    <Button
        android:text="@string/theKitchenButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theKitchenButton"
        android:layout_weight="0.33"/>
</LinearLayout>